@{
}

<div class="container">


    <form asp-action="EditDog/@Model.Id" asp-controller="Dog" method="post">
        <div class="grid">
            <div class="form-group">
                <label for="Name">Name</label>
                <input value="@Model.Name" type="text" class="form-control" id="Name" name="Name" required />
            </div>
            <div class="form-group">
                <label for="Age">Age</label>
                <input value="@Model.Age" type="number" class="form-control" id="Age" name="Age" required />
            </div>
            <button type="submit" class="btn btn-primary">Update Dog</button>
        </div>
    </form>
</div>

